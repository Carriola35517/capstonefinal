<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Payment "
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#72528E">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="411dp"
        android:layout_height="55dp"
        android:fontFamily="sans-serif-light"
        android:text="Payment Details"
        android:textAlignment="center"
        android:textColor="#FBFAFA"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="31dp" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="375dp"
        android:layout_height="44dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Name on Card"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#FBFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="118dp" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="375dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="text"
        android:textColorHint="#FBFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="192dp" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="375dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Postal Code"
        android:inputType="text"
        android:textColorHint="#FBFAFA"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="258dp" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="369dp"
        android:layout_height="54dp"
        android:ems="10"
        android:foregroundTint="#FBFAFA"
        android:hint="4******"
        android:inputType="number"
        android:shadowColor="#FBF9F9"
        android:textColorHighlight="#EAE2E2"
        android:textColorHint="#FBFAFA"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="350dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="153dp"
        android:layout_height="18dp"
        android:fontFamily="sans-serif-medium"
        android:text="CARD NUMBER:"
        android:textColor="#FBFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="318dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="97dp"
        android:layout_height="21dp"
        android:fontFamily="sans-serif-medium"
        android:text="Expiry:"
        android:textAlignment="center"
        android:textColor="#FBFAFA"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="422dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="97dp"
        android:layout_height="21dp"
        android:fontFamily="sans-serif-medium"
        android:text="CVV:"
        android:textAlignment="center"
        android:textColor="#FBFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="422dp" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="101dp"
        android:layout_height="34dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/editTextNumber2"
        tools:layout_editor_absoluteY="464dp" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="101dp"
        android:layout_height="34dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="464dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="201dp"
        android:layout_height="49dp"
        android:text="Continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="598dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6D4491">

    <TextView
        android:id="@+id/textGetStarted"
        android:layout_width="321dp"
        android:layout_height="47dp"
        android:layout_marginTop="52dp"
        android:baselineAligned="false"
        android:text="@string/get_started"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FBF7F7"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/editTextFirstName"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#FBFAFA"
        android:ems="10"
        android:hint="@string/firstname"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGetStarted" />

    <EditText
        android:id="@+id/editTextMiddleName"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FBFAFA"
        android:ems="10"
        android:hint="@string/middlename"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextFirstName"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FBFAFA"
        android:ems="10"
        android:hint="@string/lastname"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextMiddleName" />

    <EditText
        android:id="@+id/editTextEmailAddress2"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FBFAFA"
        android:ems="10"
        android:hint="@string/email_address_hint"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLastName" />

    <EditText
        android:id="@+id/editTextPassword3"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FBFAFA"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailAddress2"
        android:importantForAutofill="no" />

    <CheckBox
        android:id="@+id/checkBoxMr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="45dp"
        android:backgroundTint="#FBFAFA"
        android:minHeight="48dp"
        android:text="@string/mr"
        android:textColor="#FBFAFA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword3" />

    <CheckBox
        android:id="@+id/checkBoxMs."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:minHeight="48dp"
        android:text="@string/mrs_ms"
        android:textColor="#FBFAFA"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxOther"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toEndOf="@+id/checkBoxMr"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword3" />

    <CheckBox
        android:id="@+id/checkBoxOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="50dp"
        android:minHeight="48dp"
        android:text="@string/other"
        android:textColor="#FBFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword3" />

    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="234dp"
        android:layout_height="48dp"
        android:layout_marginBottom="96dp"
        android:text="@string/continue_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>